{
  "format": 2,
  "developOptions": {
    "hotReload": true,
    "skipTranspile": true,
    "sourcemap": {
      "ignoreInputMaps": true,
      "columns": false,
      "ignore": [
        "**/node_modules/**"
      ]
    }
  },
  "compileOptions": {
    "component2": true,
    "transpile": {
      "script": {
        "ignore": [
          "node_modules/**"
        ]
      }
    },
    "globalObjectMode": "enable"
  }
}